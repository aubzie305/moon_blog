<div class = "center subtitle">
  Sign up
</div>

<div class="container jumbotron form">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "form-horizontal"}) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field form-group">
      <%= f.label :name , class: "col-sm-2 control-label"%>
      <div class="col-sm-10">
        <%= f.text_field :name, autofocus: true, autocomplete: "username" %>
        This will be your Moony name.
      </div>
    </div>

    <div class="field form-group">
      <%= f.label :email , class: "col-sm-2 control-label"%>
      <div class="col-sm-10">
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
    </div>

    <div class="field form-group">
      <%= f.label :password, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.password_field :password, autocomplete: "new-password" %>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
      </div>
    </div>

    <div class="field form-group">
      <%= f.label :password_confirmation, class: "col-sm-2 control-label" %><br />
      <div class="col-sm-10">
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %> 
      </div>
    </div>

    <div class="actions form-group" id = "btn_2">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit "Become a Moonie" %><br>
      </div>
    </div>
  <% end %>
</div>

<div class="container">
  <%= render "devise/shared/links" %>
</div>


