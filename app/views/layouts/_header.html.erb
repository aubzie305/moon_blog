<header class="navbar navbar-fixed-top">
  <div class="container-fluid">
    <%= link_to "Moon Moon", root_path, id: "logo" %>
    <%= link_to image_tag("moon_logo.png", alt: "Moon Blog Logo", width: "50", id: "logo_pic"), root_path %>
    <nav>
      <ul class="nav navbar-nav navbar-right">

        <% if !user_signed_in?%>
          <li><%= link_to "Home", root_path %></li>
        <% else %>
          <li><%= link_to "Dashboard", dashboard_path %></li>
        <% end %>

        <li><%= link_to "About", about_path %></li>
        <li><%= link_to "Help", help_path %></li>

        <% if user_signed_in?%>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              My Account<b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", moony_path(current_user) %>
              <li><%= link_to "Settings", '#' %>
              <li><%= link_to "Log out", destroy_user_session_path, method: :delete, data: {confirm: "Fellow moonie, are you sure you want to log out?"}%></li>
              <li class="divider"></li>
              <li><%= link_to "Contact Sailor Senshii", '#' %></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Log in", new_user_session_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>