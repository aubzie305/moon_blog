
<div class="col-xs-4 col-md-1">
  <% if current_user.avatar.attached? %>
    <%= image_tag current_user.avatar, class: "img-rounded comment-avatar"%>
  <% else %>
    <%= image_tag("pixel_star_purple.png", alt: "Default Avatar", class: "img-rounded comment-avatar") %>
  <% end %>
</div>

<div class="col-xs-14 col-md-11">
  <%= form_with(model: @comment, local: true, url: comment_create_path) do |f| %>
    <%= f.text_area :body, placeholder: " Compose new comment...", size: "70", class: "body-field comment-body" %> 

    <%= f.submit "Post Moony Comment", class: "btn btn-primary post-btn comment-button" %>
  <% end %>
</div>
