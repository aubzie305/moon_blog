<%= form_with model: [@article, @article.comments.build], local: true do |f| %>
  <p>
    <%= f.label :commenter %><br>
    <%= f.text_field :commenter %>
  </p>

  <p>
    <%= f.label :body %><br>
    <%= f.text_field :body %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>

<div>
  <%= link_to "Back", root_path %>
</div>